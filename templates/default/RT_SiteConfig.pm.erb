# dynamically find out the current timezone
my $zone = "UTC";
$zone=`/bin/cat /etc/timezone`
    if -f "/etc/timezone";
chomp $zone;
Set($Timezone, $zone);

# THE BASICS:

Set($rtname, <%= @name.to_json %>);
Set($Organization, <%= @organization.to_json %>);

Set($CorrespondAddress , <%= @correspond_address.to_json %>);
Set($CommentAddress , <%= @comment_address.to_json %>);

# force a specific language, if you don't wan't to use a translation
<% if @force_language %>
Set(@LexiconLanguages, qw(<%= @force_language %>));
<% end %>

# THE WEBSERVER:

Set($WebPath , <%= @web_path.to_json %>);
Set($WebBaseURL , <%= @web_base_url.to_json %>);

# THE DATABASE:
# generated by dbconfig-common

Set($DatabaseType, <%= @db_type.to_json %>);

Set($DatabaseHost, <%= @db_host.to_json %>);
Set($DatabasePort, <%= @db_port.to_json %>);

Set($DatabaseName, <%= @db_name.to_json %>);
Set($DatabaseUser , <%= @db_user.to_json %>);
Set($DatabasePassword , <%= @db_password.to_json %>);

# SQLite needs a special case, since $DatabaseName must be a full pathname
my $dbc_dbname = 'rtdb'; if ( "mysql" eq "sqlite3" ) { Set ($DatabaseName, '' . '/' . $dbc_dbname); } else { Set ($DatabaseName, $dbc_dbname); }
